<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/buttonSnackBarShort"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Snack Bar Short"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.21" />

    <Button
        android:id="@+id/buttonSnackBarLength"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:text="Snack Bar Length"
        app:layout_constraintEnd_toEndOf="@+id/buttonSnackBarShort"
        app:layout_constraintStart_toStartOf="@+id/buttonSnackBarShort"
        app:layout_constraintTop_toBottomOf="@+id/buttonSnackBarShort" />

    <Button
        android:id="@+id/buttonSnackBarIndefinite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:text="Snack Bar Indefinite"
        app:layout_constraintEnd_toEndOf="@+id/buttonSnackBarLength"
        app:layout_constraintStart_toStartOf="@+id/buttonSnackBarLength"
        app:layout_constraintTop_toBottomOf="@+id/buttonSnackBarLength" />

</androidx.constraintlayout.widget.ConstraintLayout>